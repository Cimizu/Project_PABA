<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBookingFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/booking"
        android:background="@drawable/backgroundmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".addBooking">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lengkapi Informasi di Bawah Ini"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/tv_namaResto_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Resto"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tv_namaResto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nama Resto"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/tv_namaResto_label"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_alamatResto_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Resto"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tv_namaResto_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tv_alamatResto"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="alamat Resto"
                android:textSize="14sp"
                android:gravity="right"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="8dp"
                android:maxLines="2"
                app:layout_constraintTop_toTopOf="@id/tv_alamatResto_label"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_jenisPaket_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Paket"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/tv_paketAdd"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_paketAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paket Resto"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_alamatResto"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_nama_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tv_paketAdd"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp"/>

            <EditText
                android:id="@+id/edt_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan nama"
                android:padding="6dp"
                android:background="@android:drawable/editbox_background"
                app:layout_constraintTop_toBottomOf="@id/tv_nama_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="4dp" />

            <TextView
                android:id="@+id/tv_tanggal_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/edt_nama"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp"/>

            <EditText
                android:id="@+id/edt_tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Maksimal tanggal booking "
                android:padding="6dp"
                android:background="@android:drawable/editbox_background"
                app:layout_constraintTop_toBottomOf="@id/tv_tanggal_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="4dp"
                android:focusable="true"
                android:clickable="true" />

            <TextView
                android:id="@+id/tv_jam_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/edt_tanggal"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp"/>

            <EditText
                android:id="@+id/edt_jam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan jam H- 1 jam"
                android:padding="6dp"
                android:background="@android:drawable/editbox_background"
                app:layout_constraintTop_toBottomOf="@id/tv_jam_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="4dp"
                android:focusable="true"
                android:clickable="true" />

            <TextView
                android:id="@+id/tv_notelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Telp yang bisa dihubungi"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/edt_jam"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp"/>

            <EditText
                android:id="@+id/edt_notelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan no.telp"
                android:padding="6dp"
                android:background="@android:drawable/editbox_background"
                app:layout_constraintTop_toBottomOf="@id/tv_notelp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="4dp" />

            <TextView
                android:id="@+id/tv_Cttn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catatan"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/edt_notelp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp"/>

            <EditText
                android:id="@+id/edt_cttn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan catatan"
                android:padding="6dp"
                android:background="@android:drawable/editbox_background"
                app:layout_constraintTop_toBottomOf="@id/tv_Cttn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="4dp" />

            <TextView
                android:id="@+id/tv_jumlahOrg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Orang"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/edt_cttn"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp"/>

            <EditText
                android:id="@+id/edt_jumlahOrang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan jumlah orang"
                android:padding="6dp"
                android:background="@android:drawable/editbox_background"
                app:layout_constraintTop_toBottomOf="@id/tv_jumlahOrg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="4dp" />

            <TextView
                android:id="@+id/tv_total_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Harga"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/edt_jumlahOrang"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="4dp"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_totalHarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_total_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="4dp"
                app:cardCornerRadius="3mm">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/tv_totalHarga_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Harga"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/tv_hargaTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10000000"
                        android:textSize="14sp"
                        android:layout_gravity="right"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_totalHarga_label"/>
                    <TextView
                        android:id="@+id/tv_totalDP_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total DP (50%)"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_totalHarga_label"/>
                    <TextView
                        android:id="@+id/tv_hargaDP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5000000"
                        android:textSize="14sp"
                        android:layout_gravity="right"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_totalDP_label"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_bookingNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking Sekarang"
                app:layout_constraintTop_toBottomOf="@id/cv_totalHarga"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btn_updateBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Booking"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/btn_bookingNow" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>