<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="10dp"
    tools:context=".konfirmasi_checkin">


    <!-- Title -->

    <ImageView
        android:id="@+id/kotakPutih"
        android:layout_width="378dp"
        android:layout_height="108dp"
        android:layout_marginBottom="44dp"
        android:src="@drawable/kotak"
        app:layout_constraintBottom_toTopOf="@+id/info_pemesan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Detail Reservasi"
        android:textColor="#247627"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info_pemesan_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Informasi Pemesan"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info_pemesan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_card"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_pemesan_label">

        <TextView
            android:id="@+id/pemesan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pesanan_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nomor Pesanan:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pemesan_name" />

        <TextView
            android:id="@+id/nomorPesenan"
            android:layout_width="234dp"
            android:layout_height="18dp"
            android:layout_marginBottom="8dp"
            android:gravity="right"
            android:maxLines="2"
            android:text="book - djhdbedkdnkedn"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/pesanan_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pesanan_number"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/pemesan_restoran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nama Restoran:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomorPesenan" />

        <TextView
            android:id="@+id/namaResto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLines="2"
            android:text="Papa Ronz"
            app:layout_constraintBottom_toBottomOf="@+id/pemesan_restoran"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pesanan_number"
            app:layout_constraintVertical_bias="1.0" />


        <TextView
            android:id="@+id/pemesan_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Alamat Restoran:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pemesan_restoran" />

        <TextView
            android:id="@+id/alamatResto"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="8dp"
            android:maxLines="2"
            android:text="Jln Melatih"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/pemesan_alamat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pemesan_alamat"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/pemesan_telepon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="No. Telepon Restoran:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alamatResto" />

        <TextView
            android:id="@+id/nomorTelfon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="088767374"
            app:layout_constraintBottom_toBottomOf="@+id/pemesan_telepon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alamatResto"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/pemesan_waktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Waktu Booking: "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pemesan_telepon" />

        <TextView
            android:id="@+id/jamTanggal"
            android:layout_width="129dp"
            android:layout_height="16dp"
            android:gravity="right"
            android:text="28 Nov 2024 | 20:00"
            app:layout_constraintBottom_toBottomOf="@+id/pemesan_waktu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pemesan_waktu"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/reservasi_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservasi"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/info_pemesan"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Reservasi Card -->

    <!-- Footer -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reservasi_section"
        android:layout_width="376dp"
        android:layout_height="238dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_card"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reservasi_label">


        <TextView
            android:id="@+id/reservasi_paket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paket Restoran"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/reservasi_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.153"
            app:layout_constraintStart_toEndOf="@+id/reservasi_image"
            app:layout_constraintTop_toTopOf="@+id/reservasi_image"
            app:layout_constraintVertical_bias="0.518" />

        <TextView
            android:id="@+id/reservasi_detail"
            android:layout_width="154dp"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Total Harga Reservasi (20 Orang)"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toEndOf="@id/reservasi_image"
            app:layout_constraintTop_toTopOf="@id/reservasi_image" />

        <TextView
            android:id="@+id/harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 400.000"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/reservasi_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/reservasi_detail" />

        <TextView
            android:id="@+id/reservasi_dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Total Uang DP (20 Orang)"
            app:layout_constraintStart_toStartOf="@+id/reservasi_detail"
            app:layout_constraintTop_toBottomOf="@id/reservasi_detail" />


        <TextView
            android:id="@+id/hargaDP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rp 200.000"
            app:layout_constraintBottom_toBottomOf="@+id/reservasi_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/reservasi_dp" />

        <ImageView
            android:id="@+id/reservasi_image"
            android:layout_width="72dp"
            android:layout_height="79dp"
            android:src="@drawable/resto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.102" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Status Reservasi: "
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Total Sisa Belum dibayar:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/statuss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/uangsisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 20.000"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="____________________________________________________"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reservasi_dp" />

        <TextView
            android:id="@+id/statusReservasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTIVE"
            app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView8" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
