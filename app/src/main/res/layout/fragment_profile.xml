<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/backgroundprofile"
    tools:context=".profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#FFFF"
        android:layout_marginTop="40dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_margin="10dp"
                android:src="@drawable/baseline_edit_24" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/baseline_account_circle_24" />

            <TextView
                android:id="@+id/displayNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ambamad Muani"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/displayEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tiramizucake@gmail.com"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/displayNomor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08981235676"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="219dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/kotak_2"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnPesanan"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/baseline_pesanan"
            android:gravity="start"
            android:text="Pesanan"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#363739" />

        <Button
            android:id="@+id/btnInputResto"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/baseline_add_resto"
            android:gravity="start"
            android:text="Add Resto"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#363739" />

        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/baseline_logout_24"
            android:gravity="start"
            android:text="Sign out"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>
