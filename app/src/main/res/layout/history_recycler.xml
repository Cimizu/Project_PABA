<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/kotak">

    <ImageView
        android:id="@+id/ivGambarResto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/resto" />

    <TextView
        android:id="@+id/tvResto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:textSize="24dp"
        android:text="Resto Jawa Surabaya"
        app:layout_constraintStart_toEndOf="@+id/ivGambarResto"
        app:layout_constraintTop_toTopOf="@+id/ivGambarResto" />

    <ImageView
        android:id="@+id/ivLoc"
        android:layout_width="24dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/ivGambarResto"
        app:layout_constraintTop_toBottomOf="@+id/tvResto"
        app:srcCompat="@drawable/loc" />

    <TextView
        android:id="@+id/tvAlamat"
        android:layout_marginStart="8dp"
        android:layout_height="44dp"
        android:layout_width="200dp"
        android:textSize="16dp"
        android:text="jalan SIwalankerto no 121, Surabaya"
        app:layout_constraintStart_toEndOf="@+id/ivLoc"
        app:layout_constraintTop_toTopOf="@+id/ivLoc" />

    <TextView
        android:id="@+id/tvTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Tanggal : "
        app:layout_constraintStart_toEndOf="@+id/ivGambarResto"
        app:layout_constraintTop_toBottomOf="@+id/ivLoc" />

    <TextView
        android:id="@+id/tvJam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Jam : ..."
        app:layout_constraintStart_toEndOf="@+id/ivGambarResto"
        app:layout_constraintTop_toBottomOf="@+id/tvTanggal" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/trash" />
</androidx.constraintlayout.widget.ConstraintLayout>